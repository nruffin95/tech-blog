<h1>Create Post</h1>
<a class="btn btn-primary" href="/">All Post</a>
<form action="/create" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Title</label>
    <input
      type="text"
      class="form-control"
      name="title"
    />
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Description</label>
    <input
      type="text"
      class="form-control"
      name="description"
    />
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Markdown</label>
    <input
      type="text"
      class="form-control"
      name="markdown"
    />
  </div>

