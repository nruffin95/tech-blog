<h1>All Posts</h1>
<a class="btn btn-primary mb-1" href="/create">Create Post</a>
<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Markdown</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each posts}}
        <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.title}}</td>
      <td>{{this.description}}</td>
      <td>{{this.markdown}}</td>
      <td>
        <a class="btn btn-primary" href="/post/{{this.id}}">View</a>
        <a class="btn btn-success" href="/edit/{{this.id}}">Edit</a>
        <a class="btn btn-danger" href="/delete/{{this.id}}">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>